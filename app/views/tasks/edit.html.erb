<head>
  <% content_for :css do %>
    <%= stylesheet_link_tag 'task_index' %>
  <% end %>
</head>
<body>
  <header>
    <div class="header-container">
      <div class="header-left">
        <a href="#" id="menu-btn"><i class="fas fa-bars bars"></i></a>
      </div>
      <div class="header-right">
        <p>予定登録ページ</p>
      </div>
    </div>
  </header>
  <main>
    <%= render partial: "scores/menu" %>
    <div class="main-container">
      <%= form_with model: @task, url: task_path, method: :patch, class: "new_task", local: true do |f| %>
        <%= render 'shared/error_messages', model: f.object %>
        <div class="field">
          <%= f.text_field :task_title, placeholder: "タスク名" %>
        </div>
        <div class="field">
          <%= f.text_area :memo, placeholder: "メモ" %>
        </div>
        <div class="field">
        <%= f.date_field :limit_date %>
        </div>
        <div class="field">
        <%= f.submit :submit, value: "編集完了" %>
        </div>
      <% end %>
    </div>
  </main>
</body>
