<head>
  <% content_for :css do %>
    <%= stylesheet_link_tag 'index' %>
  <% end %>
</head>

<body>
  <header>
  <div class="header-container">
    <div class="header-left">
      <a href="#" id="menu-btn"><i class="fas fa-bars bars"></i></a>
      
    </div>
    <div class="header-right">
      <p><%= current_user.username %></p>
    </div>
  </div>
  
  </header>
  <main style="overflow:auto;">

    <%= render partial: "menu" %>
    
    <% if @score != nil %> 
      <div class="title-n-chart">
        <p class="test-title"><%= @score.title %></p>
        <div class="radar-chart">
          <canvas id="topMyRadarChart"></canvas>
        </div>
      </div>

      <div class="boxes-wrapper">
        <div class="under-box">

          <% if @tasks.length != 0 %>
          <div class="task-container">
            <p class="task-title"><%= @task.task_title %></p>
            <p><span class="letters">残り</span><span class="remain-days"><%= @remain_days %></span><span class="letters">　日</span></p>
          </div>
          <% end %>

          <% if @tasks.length == 0 %>
          <div class="init-task-container">
              <div class="wrap">
             <p class="init-task">予定を作ろう！</p>
             </div>
             <%= link_to "新規作成", tasks_path %>
          </div>
          <% end %>
        </div>
        <div class="under-box">
          <div class="img-container">
            
            <a href="/scores/new"><%= image_tag "btn-img.png" %></a>
          
          </div>
        </div>
      </div>
    <% end %>

    <% if @score == nil %>

      <div class="init-container">
        <div class="box">
          <div class="wrap">
            <p>成績を登録してみよう！</p>
          </div>
          <%= link_to "新規作成", new_score_path %>
          <div class="init-img">
            <%= image_tag "j40_12_9.jpg" %>
          </div>
        </div>
      </div>
      

    <% end %>
  </main>
</body>

