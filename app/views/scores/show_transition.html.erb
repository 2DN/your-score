<head>
  <% content_for :css do %>
    <%= stylesheet_link_tag 'show_transition' %>
  <% end %>
</head>
<body>
  <header>
    <div class="header-container">
      <div class="header-left">
        <a href="#" id="menu-btn"><i class="fas fa-bars bars"></i></a>
      </div>
      <div class="header-right">
        <p>成績推移ページ</p>
      </div>
    </div>
  </header>
  <main>
    <%= render partial: "menu" %>
    <div class="main-wrapper">
      <% if @scores.length != 0 %>
        <div id="form-box">
          <%= form_with(id: "search-form", method: :GET, url: search_score_path(@tags_array_for_options)) do |form| %>
            <%= form.select :keyword, @tags_array_for_options.uniq, class: "select-box" %>
            <%= form.submit "表示", id: "submit-btn" %>
          <% end %>
        </div>
        <div class="line-chart">
          <canvas id="myLineChart"></canvas>
        </div>
      <% else %>
        <div class="init-container">
          <div class="box">
            <div class="wrap">
              <p>成績を登録してみよう！</p>
            </div>
            <%= link_to "新規作成", new_score_path %>
            <div class="init-img">
              <%= image_tag "j40_12_9.jpg" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </main>
</body>

