<head>
  <% content_for :css do %>
    <%= stylesheet_link_tag 'regi_new' %>
  <% end %>
</head>

<body>
  <header>
    <div class="header-left">
      <p>YourScore</p>
    </div>
    <div class="header-right">
      <%= link_to "新規登録", new_user_registration_path, class: "sign" %>
      <%= link_to "ログイン", new_user_session_path, class: "sign" %>
    </div>
  </header>
  <main>
    <%= form_with model: @user, url: user_registration_path, id: "new_user", local: true do |f| %>
      
      <div class="error_msg">
        <%= devise_error_messages! %>
      </div>

      <div class="field">
        <%= f.text_field :username, placeholder: "ユーザー名" %>
      </div>

      <div class="field">
        <%= f.email_field :email, placeholder: "メールアドレス", id: "defo_rm_id1" %>
      </div>

      <div class="field">
        <%= f.password_field :password, placeholder: "パスワード", id: "defo_rm_id2" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, placeholder: "パスワード再入力" %>
      </div>

      <div class="submit-btn">
        <%= f.submit "新規登録" %>
      </div>

      <div class="description">
        <a href="#">利用方法はこちら</a>
      </div>
    <% end %>
    
  </main>
  
  
</body>
